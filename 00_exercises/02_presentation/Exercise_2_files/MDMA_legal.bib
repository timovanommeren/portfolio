	journal = {International Journal of Drug Policy},
	author = {Manthey, Jakob and Jacobsen, Britta and Hayer, Tobias and Kalke, Jens and López-Pelayo, Hugo and Pons-Cabrera, Maria Teresa and Verthein, Uwe and Rosenkranz, Moritz},
	month = jun,
	year = {2023},
	keywords = {Cannabis, Policy, Availability, Density, Proximity, Retail},
	pages = {104039},
