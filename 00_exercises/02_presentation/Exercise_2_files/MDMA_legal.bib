	journal = {International Journal of Drug Policy},
	author = {Quireyns, Maarten and Van Wichelen, Natan and Boogaerts, Tim and Surmont, Tim and Cunningham, Andrew and Matias, João and Gys, Celine and Covaci, Adrian and van Nuijs, Alexander L. N.},
	month = may,
