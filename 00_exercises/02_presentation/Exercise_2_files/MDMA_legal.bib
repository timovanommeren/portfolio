@article{myers_where_2024,
	title = {Where {Do} {Adults} in the {United} {States} {Obtain} {Cannabis}? {A} {Nationally} {Representative} {Study} {Examining} the {Relationships} {Between} {Sociodemographic} {Factors}, {Cannabis} {Use} {Characteristics} and {Sources} of {Cannabis}},
